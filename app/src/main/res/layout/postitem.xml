<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginBottom="25dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPostContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/postHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/postUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/fd"
                    android:text="Kevin Haines"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/postTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fd"
                    android:text="TimeStamp"
                    android:textColor="#919191"
                    android:layout_below="@+id/tvPostLocation" />

                <RelativeLayout
                    android:id="@+id/fd"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp" >

                    <com.swiftkaytech.findme.views.CircleImageView
                        android:id="@+id/ivPostProfilePicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPostLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/postTime"
                    android:text="Posting Users Location"
                    android:textColor="#919191"
                    android:layout_below="@+id/postUsername" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/ivPostLike"
                    android:src="@drawable/checkmark"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/header"
                android:layout_below="@+id/header"
                android:layout_margin="2dp" >

                <TextView
                    android:id="@+id/tvPostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Post Text...."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/dfsgsdgf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPostText"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/postImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="false" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPostNumLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ae5e5e5e"
                            android:text="one person likes this"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:padding="5dp"
                            android:layout_alignTop="@+id/tvPostNumComments"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="6 Comments"
                            android:id="@+id/tvPostNumComments"
                            android:textColor="#ae5e5e5e"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivPostToggleButton"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardViewPostContainer"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_keyboard_arrow_down_black_24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.swiftkaytech.findme.views.CollapseLayout
        android:id="@+id/postExtrasContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/light_gray"
        android:layout_below="@+id/cardViewPostContainer">

        <ListView
            android:id="@+id/postItemListView"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_width="match_parent" />

    </com.swiftkaytech.findme.views.CollapseLayout>

</RelativeLayout>

