<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0c023a">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/btnstartpagelogin"
                android:background="@drawable/green_outline_flat_button"
                android:textColor="@color/primary_dark"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:id="@+id/btnstartpageregister"
                android:layout_above="@+id/btnstartpagelogin"
                android:layout_alignLeft="@+id/btnstartpagelogin"
                android:layout_alignStart="@+id/btnstartpagelogin"
                android:layout_alignRight="@+id/btnstartpagelogin"
                android:layout_alignEnd="@+id/btnstartpagelogin"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/green_solid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/copyrightstring"
                android:id="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/primary_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sloganstring"
                android:id="@+id/textView2"
                android:layout_above="@+id/btnstartpageregister"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/primary_dark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/redf"
            android:tint="@color/base_green"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView2" />
    </RelativeLayout>
</LinearLayout>
