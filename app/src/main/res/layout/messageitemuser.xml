<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvmessageuser"
        android:background="@drawable/messagebackgrounduser"
        android:padding="15dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/tvmessageusertime"
        android:layout_toLeftOf="@+id/ivmessageitemuser"
        android:layout_toStartOf="@+id/ivmessageitemuser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvmessageusertime"

        android:layout_alignRight="@+id/ivmessageitemuser"
        android:layout_alignEnd="@+id/ivmessageitemuser" />

    <com.swiftkaytech.findme.views.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivmessageitemuser"
        android:layout_below="@+id/tvmessageusertime"
        android:src="@drawable/ic_placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>