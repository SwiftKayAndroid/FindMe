<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.swiftkaytech.findme.views.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivfriendslist"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_placeholder"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivfriendslist"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvfriendslistitemname"
            android:layout_alignTop="@+id/ivfriendslist"
            android:layout_toEndOf="@+id/ivfriendslist"
            android:maxLength="8"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvfriendslistitemdesc"
            android:layout_alignBottom="@+id/ivfriendslist"
            android:layout_toEndOf="@+id/ivfriendslist" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accept"
        android:id="@+id/tvacceptfriendrequest"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginLeft="5dp"
        android:background="@drawable/textviewwithblackback"
        android:padding="5dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deny"
        android:id="@+id/tvdenyfriendrequest"
        android:layout_toEndOf="@+id/tvacceptfriendrequest"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/textviewwithblackback"
        android:padding="5dp"
        android:textColor="#ffffff" />
</RelativeLayout>