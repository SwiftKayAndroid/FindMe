<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0c023a">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etregfirstname"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Firstname"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/gray" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etreglastname"
        android:layout_below="@+id/etregfirstname"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Lastname"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_dark"
        android:layout_alignLeft="@+id/etregfirstname"
        android:layout_alignStart="@+id/etregfirstname"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:textColorHint="@color/gray" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvregdate"
        android:background="@drawable/green_outline_flat_button"
        android:textColor="@color/primary_dark"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:inputType="text"
        android:hint="Your Birthday"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/etreglastname"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/gray" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/btnbasicinfosubmit"
        android:background="@drawable/green_solid"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/etgenderselect"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etgenderselect"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Gender"
        android:paddingLeft="10dp"
        android:textColor="@color/base_green"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/tvregdate"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:textColorHint="@color/gray" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/redf"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:tint="@color/base_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>