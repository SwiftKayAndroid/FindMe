<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/beach_couple">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etregfirstname"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Firstname"
        android:paddingLeft="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/primary_dark"
        android:layout_alignLeft="@+id/tvregdate"
        android:layout_alignStart="@+id/tvregdate"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etreglastname"
        android:layout_below="@+id/etregfirstname"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Lastname"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_dark"
        android:layout_alignLeft="@+id/etregfirstname"
        android:layout_alignStart="@+id/etregfirstname"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvregdate"
        android:background="@drawable/green_outline_flat_button"
        android:textColor="@color/primary_dark"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:inputType="text"
        android:hint="Your Birthday"
        android:gravity="center"
        android:layout_below="@+id/etreglastname"
        android:layout_alignLeft="@+id/btnbasicinfosubmit"
        android:layout_alignStart="@+id/btnbasicinfosubmit"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/btnbasicinfosubmit"
        android:background="@drawable/green_solid"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etgenderselect"
        android:layout_alignStart="@+id/etgenderselect"
        android:layout_alignRight="@+id/etgenderselect"
        android:layout_alignEnd="@+id/etgenderselect" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/etgenderselect"
        android:background="@drawable/green_outline_flat_button"
        android:hint="Gender"
        android:paddingLeft="10dp"
        android:textColor="@color/primary_dark"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/tvregdate"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:singleLine="true" />

</RelativeLayout>