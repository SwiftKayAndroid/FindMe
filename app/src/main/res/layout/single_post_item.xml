<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginBottom="25dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPostContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/postHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/postUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/fd"
                    android:text="Kevin Haines"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/postTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fd"
                    android:text="TimeStamp"
                    android:textColor="#919191"
                    android:layout_below="@+id/tvPostLocation" />

                <RelativeLayout
                    android:id="@+id/fd"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/ivPostProfilePicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPostLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/postTime"
                    android:text="Posting Users Location"
                    android:textColor="#919191"
                    android:layout_below="@+id/postUsername" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/ivPostLike"
                    android:src="@drawable/checkmark"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:maxHeight="300dp"
                android:minHeight="100dp"
                android:src="@drawable/ic_placeholder" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/header"
                android:layout_below="@+id/header"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvPostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Text...."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:layout_margin="16dp" />

                <LinearLayout
                    android:id="@+id/dfsgsdgf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPostText"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPostNumLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ae5e5e5e"
                            android:text="one person likes this"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:padding="5dp"
                            android:layout_alignTop="@+id/tvPostNumComments"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="6 Comments"
                            android:id="@+id/tvPostNumComments"
                            android:textColor="#ae5e5e5e"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ivPostToggleButton"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardViewPostContainer"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:src="@mipmap/ic_keyboard_arrow_down_black_24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.swiftkaydevelopment.findme.views.ExpandableLinearLayout
        android:id="@+id/postExtrasContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:layout_below="@+id/cardViewPostContainer">

        <com.swiftkaydevelopment.findme.views.tagview.TagView
            android:id="@+id/postTagView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lineMargin="5dp"
            app:tagMargin="3dp"
            app:textPaddingBottom="3dp"
            app:textPaddingLeft="10dp"
            app:textPaddingRight="10dp"
            app:textPaddingTop="3dp">

        </com.swiftkaydevelopment.findme.views.tagview.TagView>

    </com.swiftkaydevelopment.findme.views.ExpandableLinearLayout>

    <RelativeLayout
        android:id="@+id/rlnewsfeed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_below="@+id/cardViewPostContainer">

        <ImageView
            android:id="@+id/ivcommentpost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_edit_dark" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/etcommentonpost"
            android:layout_below="@+id/baseActivityToolbar"
            android:background="@color/light_gray">
            <ListView
                android:id="@+id/lvcommentspop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:divider="@null"
                android:dividerHeight="0dp" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <EditText
            android:id="@+id/etcommentonpost"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Write a Comment"
            android:inputType="textCapSentences"
            android:lines="2"
            android:paddingRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:layout_toLeftOf="@+id/ivCommentSend"
            android:layout_toStartOf="@+id/ivCommentSend">

            <requestFocus />
        </EditText>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivCommentSend"
            android:layout_below="@+id/swipe_container_comments"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_send_white_24dp"
            android:tint="@color/black"
            android:padding="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentsEmptyView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_view_icon"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>

