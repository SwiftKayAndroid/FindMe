<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@null"
    android:id="@+id/rlprofileheader"
    android:padding="0dp">
<!--
    <com.swiftkaytech.findme.views.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivprofilepropic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_placeholder"
        android:layout_marginTop="5dp" />
        -->

    <ImageView
        android:id="@+id/ivprofilepicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout8"
        android:layout_below="@+id/tvprofileaboutme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add Friend"
            android:id="@+id/tvprofileaddfriend"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@color/holoblue"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Message"
            android:id="@+id/tvprofilemessage"
            android:layout_alignParentTop="true"
            android:textColor="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:background="@color/holoblue"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/tvprofileaddfriend"
            android:layout_toLeftOf="@+id/tvprofilemore" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="I"
            android:id="@+id/tvprofilemore"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/holoblue"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="1dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello and let me tell you a little something about me!"
        android:id="@+id/tvprofileaboutme"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:layout_below="@+id/ivprofilepicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kevin Haines"
            android:id="@+id/tvprofilename"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#48dc87"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="23/Male/Orlando"
            android:id="@+id/tvprofileage"
            android:layout_below="@+id/tvprofilename"
            android:layout_centerHorizontal="true"
            android:textColor="#59b1eb" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView6"
            android:src="@drawable/greencircle"
            android:layout_above="@+id/tvprofileage"
            android:layout_toEndOf="@+id/tvprofileage"
            android:layout_alignTop="@+id/tvprofilename"
            android:layout_toRightOf="@+id/tvprofileage" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/ivprofilepicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#70000000"></LinearLayout>

</RelativeLayout>