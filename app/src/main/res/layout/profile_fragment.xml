<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:id="@+id/profileCoordinatorLayout">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/base_green"
            app:expandedTitleMarginEnd="64dp"
            android:background="@color/base_green"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">
            <VideoView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:visibility="invisible"
                android:id="@+id/videoView" />

            <ImageView
                android:id="@+id/profileProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:visibility="visible"

                android:src="@drawable/ic_placeholder" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/profileToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/videoView"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="Kevin Haines"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/profileToolbar"
                    android:layout_toRightOf="@+id/profileProfilePicture"
                    android:layout_toEndOf="@+id/profileProfilePicture"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="23/Male/Orlando FL"
                    android:id="@+id/textView9"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginBottom="16dp" />

                <RelativeLayout
                    android:id="@+id/personalInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView9"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="About Me:"
                        android:id="@+id/textView10"
                        android:layout_marginLeft="83dp"
                        android:layout_marginStart="83dp"
                        android:layout_marginTop="34dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Just a little sumphin sumphin about me. I&apos;m Kevin and I&apos;m the coolest mother fucker you will ever meet in this whole fucking world. Go Android!"
                        android:id="@+id/profileAboutMe"
                        android:layout_below="@+id/textView10"
                        android:layout_alignLeft="@+id/textView10"
                        android:layout_alignStart="@+id/textView10"
                        android:textColor="#000000"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>
            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add_white_24dp"
        android:padding="20dp"
        app:fabSize="normal"
        app:rippleColor="@color/holoblue"
        app:layout_anchor="@+id/personalInfoContainer"
        app:layout_anchorGravity="top|left|start"
        android:layout_marginLeft="@dimen/activity_vertical_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_edit_dark"
        app:rippleColor="@color/holoblue"
        app:fabSize="mini"
        android:tint="@color/white"
        app:layout_anchor="@+id/personalInfoContainer"
        app:layout_anchorGravity="top|left|start"
        android:layout_marginLeft="250dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:rippleColor="@color/holoblue"
        app:layout_anchor="@+id/personalInfoContainer"
        app:layout_anchorGravity="top|left|start"
        app:fabSize="mini"
        android:layout_marginLeft="100dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabUpper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_photo_camera_white_24dp"
        android:padding="20dp"
        app:rippleColor="@color/holoblue"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_anchor="@+id/personalInfoContainer"
        app:layout_anchorGravity="top|left|start"
        android:layout_marginLeft="175dp"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>