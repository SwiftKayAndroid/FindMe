                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Connect Settings"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewPostContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:text="General"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="7dp"
                    android:layout_marginLeft="16dp"
                    android:text="Select which Gender and Relationship Statu you want to see"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginLeft="32dp"
                        android:padding="16dp"
                        android:text="Gender"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:layout_gravity="end"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:id="@+id/checkboxNewsfeedSettingsGenderBoth" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:text="M/F"
                        android:checked="false"
                        android:id="@+id/switchNewsfeedSettingsGender" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginLeft="32dp"
                        android:padding="16dp"
                        android:text="Status"/>

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:layout_gravity="end"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:id="@+id/checkboxNewsfeedSettingsStatusBoth" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:padding="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Single"
                        android:checked="false"
                        android:id="@+id/switchNewsfeedSettingsStatus" />
                </LinearLayout>

            </LinearLayout>

