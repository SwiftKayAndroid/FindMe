<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/profileCoordinatorLayout">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:contentScrim="@color/base_green"
        app:expandedTitleMarginEnd="64dp"
        android:background="@color/base_green"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"/>

    </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@null"
        app:layout_anchor="@id/collapsing_toolbar"
        app:layout_anchorGravity="bottom|center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="23/Male/Orlando"
        android:id="@+id/tvprofileage"
        android:layout_marginLeft="10dp"
        android:textColor="#59b1eb"
        android:layout_above="@+id/tvProfileOrientation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Straight"
            android:id="@+id/tvProfileOrientation"
            android:textColor="#59b1eb"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>


    <com.swiftkaytech.findme.views.CircleImageView
        android:id="@+id/profileProfilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="55dp"
        android:src="@drawable/ic_placeholder"
        app:layout_anchor="@id/collapsing_toolbar"
        app:layout_anchorGravity="bottom|right|end"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add_white_24dp"
        android:padding="20dp"
        app:fabSize="normal"
        app:rippleColor="@color/holoblue"
        app:backgroundTint="@color/base_green"
        app:layout_anchor="@+id/swipe_container"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_edit_dark"
        app:backgroundTint="@color/base_green"
        app:rippleColor="@color/holoblue"
        app:fabSize="mini"
        app:layout_anchor="@+id/swipe_container"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:rippleColor="@color/holoblue"
        app:backgroundTint="@color/base_green"
        app:layout_anchor="@+id/swipe_container"
        app:layout_anchorGravity="bottom|right|end"
        app:fabSize="mini"
        android:layout_marginBottom="71dp"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profileFabUpper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_photo_camera_white_24dp"
        android:padding="20dp"
        app:rippleColor="@color/holoblue"
        android:clickable="true"
        app:fabSize="mini"
        app:backgroundTint="@color/base_green"
        app:layout_anchor="@+id/swipe_container"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginBottom="76dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>