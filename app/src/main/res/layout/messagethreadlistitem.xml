<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@null">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivmessagethread"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_placeholder"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/tvmessagethreadtime"
        android:layout_marginRight="10dp"
        android:textColor="@color/holoblue"
        android:layout_alignTop="@+id/ivmessagethread"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivmessagethread"
        android:layout_toRightOf="@+id/ivmessagethread"
        android:layout_toLeftOf="@+id/tvmessagethreadtime"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Users Name"
            android:id="@+id/tvmessagethreadname"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Message"
            android:id="@+id/tvmessagethreadmessage"
            android:layout_below="@+id/tvmessagethreadname"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end" />

    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivcheckmarkmessagethread"
        android:src="@drawable/checkmark"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/tvmessagethreadtime"
        android:tint="@color/base_green" />

</RelativeLayout>