<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <color name="gray">#e0e0e0</color>
    <color name="darkred">#b80000</color>
    <color name="darkredsemitransparent">#60b80000</color>
    <color name="holoblue">#603874d6</color>
    <color name="solidblue">#3874D6</color>

    <color name="red">#f90606</color>
    <color name="lightred">#f91919</color>
    <color name ="medlightpurple">#ff00ff</color>
    <color name = "superlightpurple">#ff6eff</color>
    <color name="card_bg">#EBEBEB</color>
    <color name="card_outline">#D0D0CE</color>
    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@color/numbers_text_color</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_of_week_label_condensed" />

    <style name="SwipeFlingStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>


    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@animator/pop_show</item>
        <item name="android:windowExitAnimation">@animator/pop_hide</item>
    </style>



    <style name="AppTheme.Dark" parent="android:Theme">
        <item name="icActionEdit">@drawable/ic_action_edit_dark</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab.Light</item>
    </style>




    <style name="AppTheme.Fab.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/fab_light</item>
    </style>

    <style name="AppTheme.Fab.Dark" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/fab_dark</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.ImageButton">
        <item name="floatingActionButtonSize">normal</item>
    </style>

    <style name="FloatingActionButton.Mini" parent="FloatingActionButton">
        <item name="floatingActionButtonSize">mini</item>
    </style>

    <style name="FloatingActionButton.Light" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@android:color/primary_text_dark</item>
    </style>

    <style name="FloatingActionButton.Light.Mini" parent="FloatingActionButton.Mini">
        <item name="floatingActionButtonColor">@android:color/primary_text_dark</item>
    </style>

    <style name="FloatingActionButton.Dark" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@android:color/tab_indicator_text</item>
    </style>

    <style name="FloatingActionButton.Dark.Mini" parent="FloatingActionButton.Mini">
        <item name="floatingActionButtonColor">@android:color/tab_indicator_text</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="AppTheme.Light"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/SwipeFlingStyle">
        <item name="android:background">@color/holoblue</item>
        <item name="icActionEdit">@drawable/ic_action_edit_light</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab.Light</item>


        <!-- Support library compatibility -->
        <item name="background">@color/holoblue</item>
    </style>

</resources>
