<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swiftkaydevelopment.findme" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.example.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- [END gcm_permission] -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/redf"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"  >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.LOGINPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Registration"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.FindPeopleActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activity.MessagesActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activity.MessagesListActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activity.ViewPhotos"
            android:label="@string/app_name">
        </activity>

       <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activity.FriendsActivity"
            android:label="@string/app_name" >
        </activity>



        <activity
            android:name=".activity.BasicInfo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.BASICINFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainLineUp"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize"
            android:logo="@drawable/redfsmall">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.MAINLINEUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UpdateStatus"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.UPDATESTATUS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".services.UploadService"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.UPLOADSERVICE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Match"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.MATCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".fragment.FriendsFrag"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.FRIENDS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MyMatches"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="com.swiftkaytech.findme.MYMATCHES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <!-- [START gcm_listener] -->
        <service
            android:name=".gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".gcm.RegistrationIntentService"
            android:exported="false">
        </service>
    </application>

</manifest>
